@model Inquilinos
@{
    ViewData["Title"] = "Inquilinos";
}

<div class="text-center mb-4">
    <h2 class="display-4">Crear Inquilino</h2>
</div> 

<div class="container col-8">
    <h4>Nuevo Inquilino</h4>
    <form method="post" asp-action="GuardarInquilino">
        <div class="row mt-3">
            <div class="form-floating mb-3 col-6">
                <input type="text" asp-for="Nombre" class="form-control" placeholder="" />
                <label asp-for="Nombre" class="control-label" id="Nombre">Nombre</label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Apellido" class="form-control" placeholder="" />
                <label asp-for="Apellido" class="control-label">Apellido</label>
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-6">
                <input asp-for="Dni" class="form-control" placeholder="" />
                <label asp-for="Dni" class="control-label">Dni</label>
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Direccion" class="form-control" placeholder="" />
                <label asp-for="Direccion" class="control-label">Direccion</label>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="form-floating mb-3 col-6">
                <input asp-for="Telefono" class="form-control" placeholder="" />
                <label asp-for="Telefono" class="control-label">Telefono</label>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-6">
                <input asp-for="Correo" class="form-control" placeholder="" />
                <label asp-for="Correo" class="control-label">Correo</label>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-12 text-center mt-3">
            <input type="submit" value="Guardar" class="btn btn-success w-25 mx-2" />
            <a asp-action="ListadoInquilinos" class="btn btn-primary w-25 mx-2">Volver</a>
        </div>
    </form>
</div>
